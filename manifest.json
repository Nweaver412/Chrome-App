{
    "manifest_version": 3,
    "name": "Real-time Collaborative Browser",
    "version": "1.0",
    "description": "Allow users to collaboratively browse and interact with web pages in real time.",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }